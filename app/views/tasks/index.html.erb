<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
      <%= link_to "Edit", edit_task_path(task), class: "btn btn-primary" %>
      <%= link_to "Delete", task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", style: "margin-left: 10px;" %>
    </p>
  <% end %>
</div>

<%= link_to "New task", new_task_path, class: "btn btn-success" %>